<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Court Booking App</title>
</head>
<body>
  <%- include ('partials/navbar_user.ejs') %>
    
    <div class="container mt-5">
      <h2 class="text-center">Court Details</h2>
      <br>
      <% if (slots && slots.length > 0) { %>
          <% slots.forEach(slot => { %>
          <div class="card mb-4">
              <img class="card-img-top" src="<%= slot.image %>" alt="Card image" style="height: 500px; object-fit: cover;">
              <div class="card-body">
                <h5 class="card-title"><%= slot.court_name %></h5>
                <p class="card-text"><b>Location:</b> <%= slot.location %></p>
                <p class="card-text"><b>Date of Booking:</b> <%= slot.formatted_date %></p>
                <p class="card-text"><b>Time of Booking:</b> <%= slot.start_time %> - <%= slot.end_time %></p>
                <a href="/location/<%= slot.location %>/<%= slot.slot_id %>/book" class="btn btn-success">Click to Book</a>
              </div>
          </div>
          <% }) %>
      <% } else { %>
          <div class="alert alert-warning" role="alert">
              No slots found.
          </div>
      <% } %>
    </div>
</body>
</html>
