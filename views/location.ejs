<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Court Booking App</title>
</head>
<body>
  <%- include ('partials/navbar_user.ejs') %>

    <div class = "container mt-5">
        <h2 class="text-center">All Location</h2>
        <br>
        <% if (locations && locations.length > 0) { %>
            <% locations.forEach(location => { %>
            <div class="card mb-4">
                <img class="card-img-top" src="<%= location.image %>" alt="Card image" style="height: 300px; object-fit: cover;">
                <div class="card-body">
                  <h5 class="card-title"><%= location.court_name %></h5>
                  <p class="card-text"><b>Location:</b> <%= location.location %></p>
                  <a href="/location/<%= location.location %>" class="btn btn-primary">See Details</a>
                </div>
            </div>
            <% }) %>
        <% } else { %>
            <div class="alert alert-warning" role="alert">
                No slots found.
            </div>
        <% } %>
    </div>
</body>
</html>