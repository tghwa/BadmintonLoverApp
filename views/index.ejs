<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Court Booking App</title>
</head>
<body>
    <%- include ('partials/navbar_user.ejs') %>
    
    <img class="img-fluid" src="https://banthongyordbadmintonschool.com/wp-content/uploads/2019/01/badminton-courts-net.jpg" alt="New York">

    <div class="container">
        <br>
        <div class="text-center"><h2>Court Available</h2></div>
        <br>
        
        <form method="GET" action="/">
            <div class="mb-3 row">
                <label for="SearchDate" class="col-sm-2 col-form-label">Search by Date:</label>
                <div class="col-sm-2">
                    <input type="date" class="form-control" id="SearchDate" name="SearchDate" required>
                </div>
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>

        <% if (slots && slots.length > 0) { %>
            <div class="row">
                <% slots.forEach(slot => { %>
                    <div class="col-sm-4 mb-4">
                        <div class="card" style="width: 100%;">
                            <img class="card-img-top" src="<%= slot.image %>" alt="Card image" style="height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <h4 class="card-title"><%= slot.court_name %></h4>
                                <p class="card-text">Location: <%= slot.location %></p>
                                <p class="card-text">Date: <%= slot.formatted_date %></p>
                                <p class="card-text">Time: <%= slot.start_time %> - <%= slot.end_time %></p>
                                <a href="/location/<%= slot.location %>/<%= slot.slot_id %>" class="btn btn-primary">See Details</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="alert alert-info" role="alert">
                No slots available for the selected date.
            </div>
        <% } %>
    </div>
</body>
</html>
