<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Court Booking App</title>
</head>
<body>
  <%- include ('partials/navbar_user.ejs') %>
  <div class = "container mt-5">
      <div class="text-center"><h2>Court Available</h2></div>
      <br>

        <br>
        <% if (slots && slots.length > 0) { %>
          <img class="img-fluid" src="<%= slots[0].image %>" alt="New York">
            <% slots.forEach(slot => { %>

              <table class="table table-hover small text-center">
                <thead>
                    <tr>
                      <th width="50">Available Date</th>
                      <th width="50">Start Time</th>
                      <th width="50">End Time</th>
                      <th width="50">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                      <td><%= slot.formatted_date %></td>
                      <td><%= slot.start_time %></td>
                      <td><%= slot.end_time %></td>
                      <td><a href="/location/<%= slot.location %>/<%= slot.slot_id %>" class="btn btn-success">Details</a></td>
                    </tr>
                  <% }) %>
        

        <% } else { %>
            <div class="alert alert-info" role="alert">
                No slots available for the selected location.
        </div>
    <% } %>
  </div>
</body>
</html>